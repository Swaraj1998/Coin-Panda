<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReferralActivity">
    <ImageView
        android:id="@+id/logoimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/alpha"
        android:layout_alignParentTop="true"
        android:transitionName="logotransition"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/rectangle_button"
        android:id="@+id/referralcode"
        android:hint="Enter referral code"
        android:textAlignment="center"

        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:textColor="#000"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Submit Code"
        android:background="@drawable/round_button"
        android:layout_below="@+id/referralcode"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:id="@+id/submitref"
        />

    <ProgressBar
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/submitref"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:id="@+id/pgr"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/skip"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#0000"
        android:text="Skip"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:textColor="#000"
        android:text="Don't have a referral code?"
        android:layout_marginEnd="20dp"
        />
</RelativeLayout>