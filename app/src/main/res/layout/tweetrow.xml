<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/coinicon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/btc" />

    <TextView
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tweet"
        android:layout_alignStart="@+id/tweet"
        android:layout_alignTop="@+id/coinicon"
        android:fontFamily="sans-serif-smallcaps"
        android:text="TextView"
        android:textAllCaps="false"
        android:textColor="?attr/colorAccent"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tweet"
        android:layout_alignRight="@+id/tweet"
        android:layout_below="@+id/coin"
        android:layout_marginHorizontal="10dp"
        android:layout_toEndOf="@+id/coinicon"
        android:layout_toRightOf="@+id/coinicon"
        android:fontFamily="sans-serif-condensed"
        android:gravity="end"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keyword"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@+id/coinicon"
        android:layout_toRightOf="@+id/coinicon"
        android:text="tweet"
         />

    <TextView
        android:id="@+id/coinname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tweet"
        android:layout_alignRight="@+id/tweet"
        android:layout_alignTop="@+id/coin"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textColor="#000"
        android:textStyle="bold" />

</RelativeLayout>