<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="18sp"
        android:padding="10dp"
        android:fontFamily="monospace"
        android:background="@color/colorPrimary"
        />

    <Button
        android:id="@+id/telegram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telegram"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/layer"
        />

    <Button
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review this app"
        android:layout_marginBottom="10dp"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:background="#fff"
        android:drawablePadding="10dp"

        android:drawableLeft="@drawable/layerreview"
        android:paddingLeft="20dp"/>

    <Button
        android:id="@+id/request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request a coin"
        android:layout_marginBottom="10dp"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:background="#fff"
        android:drawablePadding="10dp"

        android:drawableLeft="@drawable/layerreq"
        android:paddingLeft="20dp"
        />

    <Button
        android:id="@+id/donate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show us some love !!!"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:background="#fff"
        android:drawablePadding="10dp"

        android:drawableLeft="@drawable/layerdonate"
        android:paddingLeft="20dp"
        />


    <Button
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share the App"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:drawablePadding="10dp"

        android:drawableLeft="@drawable/layershare"
        />

    <Button
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Support"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:drawablePadding="10dp"

        android:drawableLeft="@drawable/layerhelp"

        />

</LinearLayout>