<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_margin="5dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <View
                android:id="@+id/coinicon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="5dp"
                android:background="#dddddd" />

            <LinearLayout
                android:id="@+id/coinlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coinname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="monospace"
                    android:text=""
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>


            <View
                android:id="@+id/coin"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/coinlay"
                android:layout_toEndOf="@+id/coinicon"
                android:layout_toRightOf="@+id/coinicon"
                android:fontFamily="sans-serif-smallcaps"
                android:text="TextView"
                android:background="#dddddd"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />



            <View
                android:id="@+id/tweet"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"

                android:layout_toEndOf="@+id/coinlay"
                android:layout_below="@id/time"
                android:layout_toRightOf="@+id/coinlay"

                android:autoLink="web"
                android:background="#dddddd"
                android:text="tweet"
                android:textAlignment="textStart"
                android:textColor="#000" />
            <View
                android:id="@+id/tweet2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"

                android:layout_toEndOf="@+id/coinlay"
                android:layout_below="@id/tweet"
                android:layout_toRightOf="@+id/coinlay"

                android:autoLink="web"
                android:background="#dddddd"
                android:text="tweet"
                android:textAlignment="textStart"
                android:textColor="#000" />
            <View
                android:id="@+id/tweet3"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"

                android:layout_toEndOf="@+id/coinlay"
                android:layout_below="@id/tweet2"
                android:layout_toRightOf="@+id/coinlay"

                android:autoLink="web"
                android:background="#dddddd"
                android:text="tweet"
                android:textAlignment="textStart"
                android:textColor="#000" />
            <View
                android:id="@+id/tweet4"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"

                android:layout_toEndOf="@+id/coinlay"
                android:layout_below="@id/tweet3"
                android:layout_toRightOf="@+id/coinlay"

                android:autoLink="web"
                android:background="#dddddd"
                android:text="tweet"
                android:textAlignment="textStart"
                android:textColor="#000" />

            <View
                android:id="@+id/time"
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_alignLeft="@+id/coin"
                android:layout_alignStart="@+id/coin"
                android:layout_below="@+id/coin"
                android:layout_marginTop="5dp"
                android:fontFamily="monospace"
                android:text="timestamp"
                android:textSize="10sp"
                android:background="#dddddd"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>