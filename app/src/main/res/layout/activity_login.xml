<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anmol.coinpanda.LoginActivity"
    android:background="#fff"
    >

    <ImageView
        android:id="@+id/logoimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView10"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/alpha"
        android:transitionName="logotransition"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="CryptoHype"
        android:transitionName="mytext"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />
    <Button
        android:id="@+id/google_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/common_google_signin_btn_text_light_focused"
        android:text="Sign in with Google"
        android:foreground="@drawable/ripple_effect"
        android:textAppearance="@style/TextAppearance.AppCompat" />




    <TextView
        android:id="@+id/textView11"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/google_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:alpha="0.6"
        android:textStyle="italic"
        android:visibility="invisible"
        android:text="To continue with facebook, please make sure that you have facebook app installed on your device." />

    <ProgressBar
        android:id="@+id/pgr"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:visibility="gone" />

    <com.anmol.coinpanda.TypeWriter
        android:id="@+id/typewriter"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/google_sign_in"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        />

