<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/coinimg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:text="TextView" />

    <TextView
        android:id="@+id/cs"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        />

    <Button
        android:id="@+id/atp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Add to portfolio"

        android:layout_gravity="center"
        android:textColor="#fff"
        android:padding="10dp"
        android:background="#5cb85c"
        />

    <ProgressBar
        android:id="@+id/progr"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/portfoliolay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <Button
            android:id="@+id/viewtweets"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="View Tweets" />

        <Switch
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:switchPadding="@dimen/activity_horizontal_margin"

            android:text="Notifications" />

        <Button
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#d9534f"
            android:padding="10dp"
            android:text="Remove From Portfolio"
            android:textColor="#fff" />
    </LinearLayout>


</LinearLayout>